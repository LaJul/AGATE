{% extends 'base.html.twig' %}

{% block body %}

    <div class="fide-perfs-table">
        <table>

            <caption>{{ tournament.name }}<br />Performances Fide apr√®s la ronde {{ roundNumber }}</caption>

            <tr class="header">
                <th class="ranking">Nr.</th>
                <th class="title"></th>
                <th class="name">Nom</th>
                <th class="rating">Elo</th>
                <th class="fed">Fede</th>
                <th class="points">Pts</th>
                <th class="gamesNumber">Nbr</th>
                <th class="average">Moyenne</th>
                <th class="delta">Gain/Perf</th>
            <tr/>

            {% for rank, player in fidePerfsTable %}
                <tr class="player"> 
                    <td class="ranking">{{ rank + 1 }}</td>
                    <td class="title">{{ player.title }}</td>
                    <td class="name">{{ player.lastName | upper}} {{ player.firstName }}</td>
                    <td class="rating">{{ player.rating }} F</td>
                    <td class="fed"><img border="0" src="http://localhost:8000/flags/{{ "FRA" }}.GIF" height="15px"></td>
                    <td class="points">{{ player.points }}</td>
                    <td class="gamesNumber">{{ player.gamesNumber }}</td>
                    <td class="average">{{ player.average }}</td>
                    <td class="delta">{{ player.delta }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
            
{% endblock %}
